/*
API Information:
 - Class: "snmpCtxP"
 - Distinguished Name: "uni/tn-{{Tenant}}/ctx-{{VRF}}/snmpctx"
GUI Location:
 - Tenants > {{Tenant}} > Networking > VRFs > {{VRF}} > Create SNMP Context
*/
resource "aci_rest" "Tenant_{{Tenant}}_VRF_{{VRF}}_snmp_ctx" {
    depends_on  = [
        aci_tenant.Tenant_{{Tenant}},
        aci_vrf.Tenant_{{Tenant}}_VRF_{{VRF}}
    ]
    path        = "/api/node/mo/uni/tn-{{Tenant}}/ctx-{{VRF}}/snmpctx.json"
    class_name  = "snmpCtxP"
    payload     = <<EOF
{
    "snmpCtxP": {
        "attributes": {
            "dn": "uni/tn-{{Tenant}}/ctx-{{VRF}}/snmpctx",
            "name": "{{VRF}}",
            "rn": "snmpctx"
        },
        "children": []
    }
}
    EOF
}
