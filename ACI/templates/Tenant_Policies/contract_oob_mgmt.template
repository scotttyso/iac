#------------------------------------------
# Create a Out-Of-Band Contract
#------------------------------------------

/*
API Information:
 - Class: "vzOOBBrCP"
 - Distinguished Name: "uni/tn-{{Tenant}}/oobbrc-{{Name}}"
GUI Location:
 - Tenants > {{Tenant}} > Contracts > Out-Of-Band Contracts: {{Name}}
*/
resource "aci_rest" "oob_mgmt_contract_{{Tenant}}_{{Contract}}" {
    depends_on  = [
        aci_rest.oob_mgmt_contract_{{Contract}}
    ]
    path        = "/api/node/mo/uni/tn-{{Tenant}}/oobbrc-{{Contract}}.json"
    class_name  = "vzOOBBrCP"
    payload     = <<EOF
{
    "vzOOBBrCP": {
        "attributes": {
            "descr": "{{Description}}",
            "dn": "uni/tn-{{Tenant}}/oobbrc-{{Contract}}",
            "name": "{{Contract}}",
            "prio": "{{QoS_Class}}",
            "scope": "{{Scope}}",
            "targetDscp": "{{Target_DSCP}}"
        },
        "children": [ ]
    }
}
    EOF
}

