#------------------------------------------------
# Enable BGP on the L3Out
#------------------------------------------------

/*
API Information:
 - Class: "bgpExtP"
 - Distinguished Name: "uni/tn-{{Tenant}}/out-{{L3Out}}/bgpExtP"
GUI Location:
 - Tenants > {{Tenant}} > Networking > L3Outs > {{L3Out}} > Enable BGP (Checkbox)
*/
resource "aci_rest" "{{Tenant}}_l3out_{{L3Out}}_bgpExtP" {
    depends_on  = [
        aci_tenant.Tenant_{{Tenant}},
        aci_l3_outside.Tenant_{{Tenant}}_L3Out_{{L3Out}},
    ]
    path        = "/api/node/mo/uni/tn-{{Tenant}}/out-{{L3Out}}/bgpExtP.json"
    class_name  = "bgpExtP"
    payload     = <<EOF
{
	"bgpExtP": {
		"attributes": {
			"dn": "uni/tn-{{Tenant}}/out-{{L3Out}}/bgpExtP",
			"status": "created"
		},
		"children": []
	}
}
    EOF
}
