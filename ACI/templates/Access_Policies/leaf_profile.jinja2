#------------------------------------------
# Create a Leaf Profile and Attach
# Leaf Interface Profile(s)
#------------------------------------------

/*
API Information:
 - Class: "infraLeafS"
 - Distinguished Name: "uni/infra/nprof-{{Name}}"
GUI Location:
 - Fabric > Access Policies > Switches > Leaf Switches > Profiles > {{Name}}
*/
resource "aci_leaf_profile" "Leaf_Profile_{{Name}}" {
    depends_on                      = [
        aci_leaf_interface_profile.Interface_Profile_{{Interface_Profile}},
        aci_rest.Leaf_Policy_Group_{{Policy_Group}}
    ]
    # annotation                      = {{Tags}}
    # description                     = {{Description}}
    name                            = {{Name}}
    # name_alias                      = {{Alias}}
    relation_infra_rs_acc_port_p    = aci_leaf_interface_profile.int_profile_{{Interface_Profile}}.id
    leaf_selector {
        name                    = {{Selector_Name}}
        switch_association_type = {{Association_Type}}
        node_block {
            name  = {{Nodeblk_Name}}
            from_ = {{Node_ID_From}}
            to_   = {{Node_ID_To}}
        }
    }
}

/*
API Information:
 - Class: "infraLeafS"
 - Class: "infraRsAccNodePGrp"
 - Distinguished Name: "uni/infra/nprof-{{Leaf_Profile_Name}}/leaves-{{Leaf_Selector_Name}}-typ-range"
GUI Location:
 - Fabric > Access Policies > Switches > Leaf Switches > Profiles > {{Leaf_Profile_Name}}: Leaf Selectors Policy Group: {{Leaf_Selector_Name}}
*/
resource "aci_rest" "leaf_profile_{{Name}}_pg_{{Policy_Group}}" {
    depends_on  = [
        aci_leaf_profile.leaf_profile_{{Name}}
    ]
    path        = "/api/node/mo/uni/infra/nprof-{{Leaf_Profile}}/leaves-{{Leaf_Selector_Name}}-typ-{{Association_Type}}.json"
    class_name  = "infraLeafS"
    payload     = <<EOF
{
    "infraLeafS": {
        "attributes": {
            "dn": "uni/infra/nprof-{{Leaf_Profile_Name}}/leaves-{{Leaf_Selector_Name}}-typ-{{Association_Type}}"
        },
        "children": [
            {
                "infraRsAccNodePGrp": {
                    "attributes": {
                        "tDn": "{{Policy_Group}}"
                    },
                    "children": []
                }
            }
        ]
    }
}
  EOF
}
